<%- include('../layouts/adminheader.ejs') %>

<div class="container my-5">
    <div class="row  d-flex justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center">Admin register</h1>
            <form action="/api/v1/admin/register" method="post" class="form-control">
                <div class="form-group">
                    <label for="" >Name</label>
                    <input type="name" placeholder="enter name" required name="name" class="form-control">
                </div>  
                <div class="form-group">
                    <label for="">Email</label>
                    <input type="email" placeholder="enter email" required name="email" class="form-control">
                </div>
                <div class="form-group">
                    <label for="">Password</label>
                    <input type="password" placeholder="enter password" required name="password" class="form-control">
                </div>
                <div class="d-flex justify-content-center my-2">
                    <input type="submit" value="Register" class="btn btn-primary">
                </div>
                
            </form>  
            <% if (errors && errors.length > 0) { %>
                <div class="alert alert-danger">
                    <ul>
                        <% errors.forEach(error => { %>
                            <li><%= error %></li>
                        <% }); %>
                    </ul>
                </div>
            <% } %>      
            
                
            <% if(typeof message !== 'undefined'){ %>
                <div class="alert alert-danger">
                    <li ><%= message %></li>
                </div> 
                <% } %>

        </div>
    </div>
</div>
  
    <%- include('../layouts/adminfooter.ejs') %>