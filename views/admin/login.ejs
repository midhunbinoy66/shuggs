<%- include('../layouts/header.ejs') %>
    <div class="container my-5">
        <div class="row d-flex justify-content-center">
            <div class="col-md-4 ">
                <div class="text-center">
                    <h3>Login Admin</h3>
                </div>
                <form action="/admin/login" method="post" class="form-control" >

                    <div class="form-group">
                        <label for="">Email</label>
                        <input type="email" placeholder="enter email" required name="email" class="form-control">
                    </div>
           
                    <div class="form-group">
                        <label for="">Password</label>
                        <input type="password" placeholder="enter password" required name="password" class="form-control">
                    </div>    

                        <div class="d-flex justify-content-center">
                            <input type="submit" value="Login" class="btn btn-primary my-2" >
                        </div>                            
                    
                </form> 
                                    
                
                <% if(typeof message !== 'undefined'){ %>
                    <div class="alert alert-danger">
                        <li ><%= message %></li>
                    </div> 
                    <% } %>
    
    
            </div>
        </div>
    </div>
    


<%- include('../layouts/adminfooter.ejs') %>