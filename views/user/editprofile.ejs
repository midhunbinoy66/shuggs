<%- include('../layouts/logginheader.ejs') %>

<div class="container  vh-100 mt-4">
    <div class="row">
        <div class="col-md-4">
            <div class="row">
                <div class="col">
                    <div class="card">
                        <div class="text-center">
                            <h3>User</h3>
                        </div>
                        <div>
                            <ul class="list-group list-group-flush ">
                                <li  class="list-group-item" ><a href="/user/editprofile" class="text-decoration-none">Edit profiles</a></li>
                                <li  class="list-group-item"><a href="/user/userorders" class="text-decoration-none">Show Orders</a></li>
                                <li  class="list-group-item"><a href="/user/useraddress" class="text-decoration-none">Show addresses</a></li>
                                <li  class="list-group-item"><a href="/user/changepassword" class="text-decoration-none">change passord</a></li>
                                <li  class="list-group-item"><a href="/user/userwallet" class="text-decoration-none">Wallet</a></li>
                                </ul>
                        </div>
    
                    </div>
                </div>
                </div>
        </div>
        <div class="col-md-8">
            <div class="container ">
                <div class="row  ">
                    <div class="col-md-10 ">

                        <form action="/user/editprofile" method="post" class="form-control" >
                            <div class="text-center">
                                <h3>Edit  User</h3>
                            </div>
                            
                            <div class="form-group">
                                <label for="">Name</label>
                                <input type="name"  required name="name" class="form-control" value="<%= user.name %>">
                            </div>
        
 
                            <div class="form-group">
                                <label for="">Mobile</label>
                                <input type="text"  required name="mobile" class="form-control" value="<%= user.mobile %> ">
                            </div>
                            <div class="form-group mt-1 d-flex justify-content-between" >
                                <div>
                                    <p class="fw-bold">Email :<%= user.email %></p>
                                </div>
                                <div>
                                    <a href="/user/editemail" class="text-decoration-none">Edit Email</a>
                                </div>
                              
                                
                            </div>
                   
        
                                <div class="d-flex justify-content-center ">
                                    <input type="submit" value="Edit Profile" class="btn btn-primary my-2" >
                                </div>                            
                            
                        </form> 
          
                        
                            
                              <% if (errors && errors.length > 0) { %>
                <div class="alert alert-danger">
                    <ul>
                        <% errors.forEach(error => { %>
                            <li><%= error %></li>
                        <% }); %>
                    </ul>
                </div>
            <% } %>      
            
                
            
<% if(typeof message !== 'undefined'){ %>
    <div class="alert alert-danger">
        <li ><%= message %></li>
    </div> 
    <% } %>
            
                    </div>
                </div>
            </div>        
        </div>
        

    </div>
</div>



<%- include('../layouts/footer.ejs') %>