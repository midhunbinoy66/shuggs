

  <%- include('../layouts/logginheader.ejs') %>

<div class="container my-2">
    <div class="row">
        <!-- User Sidebar -->
        <div class="col-md-4 mb-2">
            <div class="card">
                <div class="text-center">
                    <h3>User</h3>
                </div>
                <div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><a href="/api/v1/user/editprofile" class="text-decoration-none">Edit Profile</a></li>
                        <li class="list-group-item"><a href="/api/v1/user/userorders" class="text-decoration-none">Show Orders</a></li>
                        <li class="list-group-item"><a href="/api/v1/user/useraddress" class="text-decoration-none">Show Addresses</a></li>
                        <li class="list-group-item"><a href="/api/v1/user/changepassword" class="text-decoration-none">Change Password</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Cart Details -->
        <div class="col-md-8">
            <div class="container">
                <div class="row d-flex justify-content-center">
                    <div class="col-md-12">
                        <% if(typeof cart !== 'undefined' && cart.items.length > 0 ){ %>
                            <% cart.items.forEach(item => { %>
                                <div class="row mb-3 border rounded">
                                    <!-- Left Side (Product Image and Name) -->
                                    <div class="col-md-3">
                                        <div class="image-container">
                                            <img src="/../productImages/<%= item.product.images[0] %>" class="card-img-top img-fluid rounded-start" alt="Product Image">
                                        </div>
                                        <div><%= item.product.name %></div>
                                    </div>

                                    <!-- Middle (Update Quantity and Delete) -->
                                    <div class="col-md-6 d-flex justify-content-center align-items-center">
                                      <div class="row">
                                          <div class="col-md-12">
                                              <form action="/api/v1/user/cart/update/<%= item.product._id %>?size=<%= item.size %>" method="post" class="mb-2">
                                                  <div class="input-group">
                                                      <input type="number" name="quantity" class="form-control" value="<%= item.quantity %>" min="1" required>
                                                      <button type="submit" class="btn btn-primary">Update Quantity</button>
                                                  </div>
                                              </form>
                                  
                                              <form action="/api/v1/user/cart/delete/<%= item.product._id %>?size=<%= item.size %>&quantity=<%= item.quantity %>" method="post">
                                                  <button type="submit" class="btn btn-danger mt-2">Delete</button>
                                              </form>
                                          </div>
                                      </div>
                                  </div>
                                  

                                    <!-- Right Side (Details: Quantity, Size, Price) -->
                                    <div class="col-md-3">
                                        <ul class="list-group">
                                            <li class="list-group-item">Quantity: <%= item.quantity %></li>
                                            <li class="list-group-item">Size: <%= item.size %></li>
                                            <li class="list-group-item">Price: <%= item.product.price %></li>
                                            <% if(item.offerPrice){ %>
                                                <li class="list-group-item">Offer Price: <%= item.offerPrice %></li>
                                           <% } %>                                           
                                          <li class="list-group-item fw-bold">Total: <%= item.quantity * item.offerPrice %></li>
                                        </ul>
                                    </div>
                                </div>
                            <% }); %>

                            <div class="d-flex justify-content-center my-2">
                                <a href="/api/v1/user/checkout" class="btn btn-primary mt-2">Proceed to Checkout</a>
                            </div>
                        <% } else { %>
                            <div class="card">
                                <div class="card-body">
                                    <p>Hola! Your cart is empty</p>
                                </div>
                                <a href="/api/v1/user/userdashboard" class="btn btn-secondary">Please add products to your cart</a>
                            </div>
                        <% } %>

                        <% if(typeof message !== 'undefined'){ %>
                            <div class="alert alert-danger">
                                <ul>
                                    <li><%= message %></li>
                                </ul>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>

    
body {
  display: flex;
  flex-direction: column;
  min-height: 100vh; /* Ensure the body takes up at least the full viewport height */
}

main {
  flex: 1; /* Allow the main content to grow and take up remaining space */
}

footer {
  flex-shrink: 0; /* Prevent the footer from shrinking */
}
    /* Body and container styles */

    .image-container {
        text-align: center;
        margin-bottom: 10px;
    }

    /* Additional styles for product image */
    .card-img-top {
        max-width: 100%;
        height: auto;
    }

    @media (max-width: 767px) {
        /* Add margin or padding to the bottom of the container */
        .container {
            margin-bottom: 100px; /* Adjust the value based on the space needed */
        }
    }

</style>

