<%- include('../layouts/header.ejs') %>


<div class="container my-5">
    <div class="row  d-flex justify-content-center ">
        <div class="col-md-4 ">
            <h2 class="text-center">User Verification</h2>
<form action="/user/Verification" method="POST" class="form-control">
    <div class="form-group">
        <label for="">Email</label>
        <input type="email" name="email" class="form-control">
    </div>
    <div class="form-group">
        <label for="">OTP</label>
        <input type="text" name="otp" class="form-control">
    </div>
    <div class="form-group d-flex justify-content-center ">
        <input type="submit" value="Verify Email" class="btn btn-primary my-2">
    </div>
    <div class="d-flex justify-content-center ">
        <a href="/user/login" class="text-decoration-none">verified user ,proceed to Login</a>
    </div>
    
</form>


<% if(typeof message !== 'undefined'){ %>
    <div class="alert alert-danger">
        <li ><%= message %></li>
    </div> 
    <% } %>
    
    <% if(typeof passMessage !== 'undefined'){ %>
        <div class="alert alert-success">
            <li ><%= passMessage %></li>
        </div> 
        <% } %>

        </div>
    </div>
</div>




