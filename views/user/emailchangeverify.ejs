<%- include('../layouts/header.ejs') %>

<div class="container my-2">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6">
            <form action="/api/v1/user/emailchangeverify" method="post" class="form-control" >
                <div class="form-group">
                    <label for="" class="text-dark">Confirm the New Email</label>
                    <input type="email" placeholder="enter new email" required name="newEmail" class="form-control">
                </div>
                <div class="form-group">
                    <label for="" class="text-dark">OTP</label>
                    <input type="text" placeholder="enter token" required name="token" class="form-control">
                </div>


                <div class="d-flex flex-column align-items-center mt-3 p-2">
                    <div>
                        <input type="submit" value="verify new Email" class="btn btn-primary mb-2" >
                    </div> 
                </div>                       
            </form> 
            <% if(typeof message !== 'undefined'){ %>
                <div class="alert alert-danger">
                    <li ><%= message %></li>
                </div> 
                <% } %>
        </div>
    </div>
</div>

<style>
    body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    .container {
        flex: 1;
    }
</style>
<%- include('../layouts/footer.ejs') %>