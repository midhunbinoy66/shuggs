<%- include('../layouts/header.ejs') %>
<!-- As a heading -->

  <div class="container my-5">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6">
            <form action="/user/register" method="post" class="form-control" >
                <div class="form-group">
                    <label for="" class="text-dark">Name</label>
                    <input type="text" placeholder="enter name" required name="name" class="form-control">
                </div>
                <div class="form-group">
                    <label for="">Email</label>
                    <input type="email" placeholder="enter email" required name="email" class="form-control">
                </div>
                <div class="form-group">
                    <label for="">Mobile</label>    
                    <input type="text" name="mobile" required class="form-control" placeholder="enter mobile">
                </div>
                <div class="form-group">
                    <label for="">Password</label>
                    <input type="password" placeholder="enter password" required name="password" class="form-control">
                </div>    
                <div class="form-group">
                    <label for="">Confirm Password</label>
                    <input type="password" placeholder="confirm password" required name="confirmPassword" class="form-control">
                </div>
                <div class="form-group">
                    <label for="">Referal Code</label>
                    <input type="text" placeholder="Enter referral if any"  name="referredUserCode" class="form-control">
                </div>
                <div class="d-flex flex-column align-items-center mt-3 p-2">
                    <div>
                        <input type="submit" value="Register" class="btn btn-primary mb-2" >
                    </div> 
                </div>
                                                
            </form> 
            <div class="mt-1">
                <a href="/user/login" class="text-decoration-none btn-light p-1 ">already a User,sign in</a>
                <a href="/user/Verification" class="text-decoration-none text-tertiary " > or Verify  Email</a>        
            </div>
            <% if (errors && errors.length > 0) { %>
                <div class="alert alert-danger">
                    <ul>
                        <% errors.forEach(error => { %>
                            <li><%= error %></li>
                        <% }); %>
                    </ul>
                </div>
            <% } %>      
            
                
            
<% if(typeof message !== 'undefined'){ %>
    <div class="alert alert-danger">
        <li ><%= message %></li>
    </div> 
    <% } %>

        </div>
    </div>
</div>

<%- include('../layouts/adminfooter.ejs')  %>    