                            </ul>
                    </div>

                </div>
            </div>
            </div>
        </div>
        <div class="col-md-8 ">
            <h1>Available coupons</h1>
            <div class="container">
                <div class="row">
                    <% coupons.forEach(coupon => { %>
                        <div class="col-md-4">
                            <div class="card text-bg-dark mb-3" style="max-width: 18rem;">
                                <div class="card-header" id="couponCode"><%= coupon.code %></div>
                                <div class="card-body">
                                    <h5 class="card-title"><button onclick="copyCouponCode()" class="btn btn-success">Copy</button></h5>
                                    <p class="card-text">Get a max discount up to <%= coupon.maxDiscountAmount %></p>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
            



        </div>
        

    </div>
</div>

<script>
    function copyCouponCode() {
    // Select the text within the coupon code span
    const couponCodeElement = document.getElementById('couponCode');
    const couponCode = couponCodeElement.textContent || couponCodeElement.innerText;

    // Create a temporary input element
    const tempInput = document.createElement('input');
    tempInput.value = couponCode;
    document.body.appendChild(tempInput);

    // Select the text in the input element
    tempInput.select();
    tempInput.setSelectionRange(0, 99999); // For mobile devices

    // Copy the selected text
    document.execCommand('copy');

    // Remove the temporary input
    document.body.removeChild(tempInput);

    // Show a message or perform any other action to indicate the copy
    alert('Coupon code copied to clipboard: ' + couponCode);
}
</script>

