                                <div class="col-md-6 d-flex align-items-end my-2 my-sm-0">
                                    <button id="applyCouponButton" class="btn btn-success">Apply Coupon</button>
                                    <a href="/api/v1/user/usercoupons" class="btn btn-secondary mx-1">Your Coupons</a>
                                </div>

