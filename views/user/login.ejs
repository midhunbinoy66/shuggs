<%- include('../layouts/header.ejs') %>



    <div class="container my-5">
        <div class="row  d-flex justify-content-center">
            <div class="col-md-5 ">
                <div class="text-center">
                    <h3>Login User</h3>
                </div>
                <form action="/user/login" method="post" class="form-control" >

                    <div class="form-group">
                        <label for="">Email</label>
                        <input type="email" placeholder="enter email" required name="email" class="form-control">
                    </div>
           
                    <div class="form-group">
                        <label for="">Password</label>
                        <input type="password" placeholder="enter password" required name="password" class="form-control">
                    </div>    

                        <div class="d-flex justify-content-center ">
                            <input type="submit" value="Login" class="btn btn-primary my-2" >
                        </div>                            
                        <div class="d-flex justify-content-center" >
                            <a href="/user/register" class="text-decoration-none">Not a user signup</a>
                            <a href="/user/Verification" class="text-decoration-none mx-3 text-secondary">Verify your Email</a>
                            <a href="/user/forgotpassword" class="text-decoration-none mx-3 text-secondary">Forgot Password</a>
                        </div>
                    
                </form> 
  
                
                    
                <% if(typeof message !== 'undefined'){ %>
                    <div class="alert alert-danger">
                        <li ><%= message %></li>
                    </div> 
                    <% } %>
    
            </div>
        </div>
    </div>
    

<%- include('../layouts/adminfooter.ejs') %>
