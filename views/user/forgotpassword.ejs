<%- include('../layouts/header.ejs') %>

<div class="container my-2">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6">
            <form action="/user/forgotpassword" method="post" class="form-control" >
                <div class="form-group">
                    <label for="" class="text-dark">User Email</label>
                    <input type="email" placeholder="enter email" required name="email" class="form-control">
                </div>

                <div class="d-flex flex-column align-items-center mt-3 p-2">
                    <div>
                        <input type="submit" value="Send Reset Mail" class="btn btn-primary mb-2" >
                    </div> 
                </div>                       
            </form> 
            <% if(typeof message !== 'undefined'){ %>
                <div class="alert alert-danger">
                    <li ><%= message %></li>
                </div> 
                <% } %>
        </div>
    </div>
</div>

<style>
    body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    .container {
        flex: 1;
    }
</style>
