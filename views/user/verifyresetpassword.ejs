<%- include('../layouts/header.ejs') %>

<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6">
            <form action="/api/v1/user/verifyresetpassword/<%= resetToken %>" method="post"  class="form-control">
                <div class="form-group">
                    <label for="">New Passwrod
                        <input type="password" placeholder="enter new password" name="password" class="form-control">
                    </label>
                </div>
                <div class="form-group">
                    <label for="">confirm Passwrod
                        <input type="password" placeholder="confirm new password" name="confirmPassword" class="form-control">
                    </label>
                </div>
                <input type="hidden"  name="token" value="<%= resetToken %>">
                <div class="d-flex justify-content-center my-2">
                    <input type="submit" value="Reset Password" class="btn btn-primary">
                </div>
             
            </form> 
        </div>
    </div>
</div>
<style>
    body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    .container {
        flex: 1;
    }
</style>
